{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dev Proxy MinimalPermissionsGuidancePlugin config schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "apiSpecsFolderPath": {
      "type": "string"
    },
    "permissionsToExclude": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "The scopes to ignore and not include in the report. Default: ['profile', 'openid', 'offline_access', 'email'].",
      "default": ["profile", "openid", "offline_access", "email"]
    }
  },
  "required": [
    "apiSpecsFolderPath"
  ],
  "additionalProperties": false
}