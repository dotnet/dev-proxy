{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dev Proxy responses",
  "description": "Responses for Dev Proxy",
  "type": "object",
  "properties": {
    "responses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS", "CONNECT", "TRACE"]
          },
          "nth": {
            "type": "integer"
          },
          "responseBody": {
            "type": ["object", "string"]
          },
          "responseCode": {
            "type": "integer"
          },
          "responseHeaders": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": ["url"]
      }
    }
  },
  "required": ["responses"]
}